@model IEnumerable<ProfileGroupsViewModel>
@{
    ViewData["Title"] = "My Groups";
}

<div class="offset-md-1 col-md-10">
    @if (Model.Count() > 0)
    {
        @foreach (var group in Model)
        {
            <div class="media row mx-0 mt-1">
                <div class="media-body mx-0 mt-1 col-md-6 px-0 row flex-nowrap">
                    @if (!string.IsNullOrWhiteSpace(group.ImagePath))
                    {
                        <img src="~/img/groups/@group.ImagePath" class="align-self-start rounded-circle d-block media-image" alt="Profile Image">
                    }
                    else
                    {
                        <img src="~/img/common/default-male.png" class="align-self-start rounded-circle d-block media-image" alt="Profile Image">

                    }
                    <h1>@group.Name</h1>
                    <div class="ml-2">
                        <h5 class="mt-0">@group.Name</h5>
                    </div>
                </div>
                <div class="col-md-6 align-self-start align-items-end row mx-0 px-0">
                    <div class="col-md-6">
                        <a class="btn btn-success w-100 mt-1" asp-controller="Group" asp-action="LetsChat" asp-route-id="@group.Id">View</a>
                        @if (group.IsOwner)
                        {
                            <a class="btn btn-primary w-100 mt-1" asp-controller="Group" asp-action="Members" asp-route-id="@group.Id">Group Members</a>
                        }
                    </div>
                    <div class="col-md-6">
                        @if (group.IsOwner)
                        {
                            <a class="btn btn-primary w-100 mt-1" asp-controller="Group" asp-action="Edit" asp-route-id="@group.Id">Edit Group</a>
                        }
                        @if (group.IsOwner)
                        {
                            <form class="d-inline" method="post" asp-controller="Group" asp-action="Delete" asp-route-id="@group.Id">
                                <button class="btn btn-danger w-100 mt-1">Delete Group</button>
                            </form>
                        }
                        else
                        {
                            <form class="d-inline" method="post" asp-controller="Group" asp-action="Leave" asp-route-id="@group.Id">
                                <button class="btn btn-danger w-100 mt-1">Leave Group</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h2 class="mt-5 text-center">You aren't in any groups</h2>
    }
    <a asp-controller="Group" asp-action="Create" class="btn btn-primary btn-lg btn-block mt-2">Create New Group</a>
</div>