@model IEnumerable<PostListViewModel>
@{
    ViewData["Title"] = "Manage Posts";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Posts</h3>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Post Id</th>
                            <th>Profile Id</th>
                            <th>Name</th>
                            <th>Created On</th>
                            <th>Likes Count</th>
                            <th>Comments Count</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model)
                        {
                            <tr>
                                <td>@post.Id</td>
                                <td>@post.ProfileId</td>
                                <td>@post.Name</td>
                                <td>@post.CreatedOn</td>
                                <td>@post.LikesCount</td>
                                <td>@post.CommentsCount</td>
                                <td>
                                    <a asp-action="DeletePost" asp-area="Administrator" asp-controller="Post" asp-route-id="@post.Id" type="button" class="btn btn-block btn-outline-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>